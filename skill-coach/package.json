{
  "name": "skill-coach",
  "displayName": "Skill Coach",
  "description": "AI-powered skill analysis coach",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",

  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skillCoach",
          "title": "Skill Coach",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "skillCoach": [
        {
          "id": "skillCoach.panel",
          "name": "Skill Analysis"
        }
      ]
    },
    "commands": [
      {
        "command": "skillCoach.scanProject",
        "title": "Skill Coach: Scan Project"
      }
    ]
  },

  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "prepublish": "npm run compile"
  },

  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}
